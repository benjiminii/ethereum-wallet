datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  firstName   String
  lastName    String
  birthday    DateTime
  gender      Gender
  email       String   @unique
  phoneNumber String
}

enum Gender {
  MALE
  FEMALE
  OTHER
}
