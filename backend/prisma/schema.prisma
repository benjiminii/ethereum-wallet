datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL_ADMIN")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  walletAddress String    @unique
  firstName     String?
  lastName      String?
  birthday      DateTime?
  email         String?
  phoneNumber   String?
  gender        Gender?
}

enum Gender {
  MALE
  FEMALE
  OTHER
}
